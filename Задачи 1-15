sum1=np.sum(arr)
print(sum1)
sums1=np.sum(arr, axis=1)
print(sums1)
sums1=sums1/sum1
print(sums1)
arr3=np.array([[0,0,0,0, sums[0]],
               [0,0,0,0,sums[1]],
