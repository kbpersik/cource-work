print(arr)

#Задача 15
print("_________________________________________________")
print('Задача 15')
m=3
n=4
arr2=np.arange(m*n).reshape(m,n)
print(arr2)
h=2
l1=np.where(arr2==h,1,0)
L2=np.count_nonzero(l1, axis=0)
L3=np.where(L2>0,'есть','нет')
print(L3)
